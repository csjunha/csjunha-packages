{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*", "src/wasm/package/**/*"],
  "exclude": ["node_modules", "**/__specs__/*", "**/*.spec.ts", "sample/**/*"],
  "display": "Default",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "declaration": true
  }
}
